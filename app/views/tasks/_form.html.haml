= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:

      %ul
        = @task.errors.full_messages.each do |msg|
          %li
            = msg
      

  .field
    %br
    = f.text_area :description, :class => 'todoDescription', :style => 'height:300px;width:100%;'
    
  .actions
    = f.submit :class => 'submitSaveIt', :value => ''