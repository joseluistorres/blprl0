<%- if @task.status %>
$("div#text_task_span_<%= @task.id.to_s %>").css('text-decoration', 'line-through');
$("a#link_due_date_<%= @task.id.to_s %>").addClass('titleDateBubble_done');
$("a#link_due_date_<%= @task.id.to_s %>").removeClass('titleDateBubble');
<%- else %>
$("div#text_task_span_<%= @task.id.to_s %>").css('text-decoration', 'none');
$("a#link_due_date_<%= @task.id.to_s %>").removeClass('titleDateBubble_done');
$("a#link_due_date_<%= @task.id.to_s %>").addClass('titleDateBubble');
$("a.cancel_action[data_link|=<%= @task.id.to_s %>]").trigger('click');
$("div#minute_container_<%= @task.id.to_s %>").html("<%= escape_javascript(render(:partial => 'tasks/shared/task_row', :locals => { :task => @task })) %>")
$("div#minute_container_<%= @task.id.to_s %>").animate({backgroundColor: "#FFFF00"}, 500);
$("div#minute_container_<%= @task.id.to_s %>").animate({backgroundColor: "#FFFFFF"}, 800);
<%- end %>