<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Created by</th>
    <th>Assign to</th>
    <th>Due date</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.user_id %></td>
    <td><%= task.assigned_to %></td>
    <td><%= task.due_date %></td>
    <td><%= task.weight %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

